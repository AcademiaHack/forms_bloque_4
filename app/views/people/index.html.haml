%h1 People
%table
  %thead
    %tr
      %th Name
      %th Age
      %th Gender
      %th Alien?
  %tbody
  - @people.each do |person|
    %tr
      %td
        = person.name
      %td
        = person.age
      %td
        = person.gender
      %td
        = person.alien
      %td
        = link_to 'Show', person_path(person)
        = link_to 'Edit', edit_person_path(person)
        = link_to 'Destroy', person_path(person), method: :delete, data: {confirm: 'Are you sure?'}

%br/
= link_to 'New Person', new_person_path

